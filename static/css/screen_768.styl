@import "util.styl"
@media screen and (min-width: 767px)

    section
        margin-bottom 90px

        .home-text
            margin-bottom 55px

    .news-image
        height 280px

    header

        .panel-busqueda
            display block
            overflow hidden
            padding 25px 0 0

            .caja-busqueda
                border #999999 thin solid
                padding 0 9px
                height 30px

                span
                    padding-top 7px

            .lenguajes
                display table

                .amereida-btn
                    @extends .box
                    font-size 11px
                    border-color white

                    p
                        text-transform none

                .amereida-btn:hover
                    border-color #999999

    h1, h2
        text-transform uppercase
        font-size 24px

    h3 
        font-size 25px

    h4
        font-size 16px

    footer

        section
            @extends .box
                width 24%

        .responsive-footer
            overflow initial

    .main
        padding-top 165px
        padding-bottom 145px

    .nav.navbar-nav
        left initial

    #seccion_mapa
        .nav.nav-tabs.tab-especial
            max-width 300px

    #ubicacion
    #vista
        @extends .box
            width 49%

    #visita
        form
            max-width 500px

    .obras-box
        text-align center

        .obra
            @extends .box
            
    .cca-brand
        position relative

        figure
            position absolute

    .tab-especial

        li
            width auto
            text-align center

    .carousel-caption
        margin-left 2.3%
