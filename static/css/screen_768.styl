@import "util.styl"
@media screen and (min-width: 768px)

    footer
        section
            @extends .box
                width 24%

    header

        div
            .panel-busqueda
                display block
                overflow hidden
                padding 0.5em 0

                .caja-busqueda
                    padding-top 0.5em

                    .fa-search
                        background-color #eaeaea
                        padding 0.35em
                        position relative
                        right 4px
                        border 1px solid gray

                .lenguajes
                    span
                        @extends .box
                        border 1px solid gray
                        padding 0.5em 2em

        .nav.navbar-nav
            float right

        .logo

            img
                width 62px

    #obras_intro
        padding-bottom 1.5em

    #seccion_mapa
        .nav.nav-tabs.tab-especial
            max-width 300px

    #ubicacion
    #vista
        @extends .box
            width 49%

    #visita
        form
            max-width 500px

    .obras-box
        text-align center

        .obra
            @extends .box
            
    .cca-brand
        position relative

        figure
            position absolute

    .tab-especial

        li
            width auto
            text-align center
