@import "util.styl"
@media screen and (min-width: 767px)

    footer
        section
            @extends .box
                width 24%

        .responsive-footer
            overflow initial

    .thumbnail
        height 575px

    header

        .panel-busqueda
            display block
            overflow hidden
            padding 0.5em 0

            .caja-busqueda
                padding-top 0.5em

                .fa-search
                    background-color #eaeaea
                    padding 0.35em
                    position relative
                    right 4px
                    border 1px solid gray

            .lenguajes
                span
                    @extends .box
                    border 1px solid gray
                    padding 0.5em 2em

        .logo

            img
                width 62px

        .main-wrapper
            position relative

    .nav.navbar-nav
        left initial

    #obras_intro
        padding-bottom 1.5em

    #seccion_mapa
        .nav.nav-tabs.tab-especial
            max-width 300px

    #ubicacion
    #vista
        @extends .box
            width 49%

    #visita
        form
            max-width 500px

    .obras-box
        text-align center

        .obra
            @extends .box
            
    .cca-brand
        position relative

        figure
            position absolute

    .tab-especial

        li
            width auto
            text-align center
