.box
    box-sizing border-box
    display inline-block
    vertical-align top

.btn-custom
    width 80%
    button
        width 25%
        padding 0.5em 0
        p
            font-size 10px
            margin 0

.btn-remove
    padding 15px !important
    span
        font-size 25px !important

.no-padding
    padding 0px !important

.carousel-caption
    left 2.3%

.navbar-nav
    float right

.carousel-control

    .carousel-btn
        display block


#NAV-ID

        a
            display block

.carousel
    height 409px

@media screen and (max-width: 767px)

    .carousel-caption
        left 0

    .navbar-nav
        float none

    .carousel-control

        .carousel-btn
            display none

    #NAV-ID

        a
            display none
            
    .carousel
            height 609px
